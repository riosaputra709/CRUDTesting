@model WEBCRUDTESTING.Models.ProductModel
@{
    ViewData["Title"] = "Add Product Page";

    Layout = null;

}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Box Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

</head>
<body>
    <div class="container" style="margin-top:30px;">
        <form method="post" class="row g-3 w-50" asp-controller="Person" asp-action="insertData">



            <div class="col-8">
                <label for="saldo" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" step="any" value="">
                <div class="form-text">Input Name.</div>
            </div>

            <div class="col-8">
                <label for="saldo" class="form-label">Age</label>
                <input type="text" class="form-control" id="age" aria-describedby="age" step="any" value="">
                <div class="form-text">Input Description.</div>
            </div>

            <div class="col-8">
                <label for="saldo" class="form-label">Price</label>
                <input type="number" class="form-control" id="age" aria-describedby="age" step="any" value="">
                <div class="form-text">Input Price.</div>
            </div>


            <div class="col-6">
                <button type="submit" class="btn btn-success"><i class='bx bx-add-to-queue'></i>Submit</button>
            </div>
            <div class="col-6">
                <a class="btn btn-secondary" href="/Person/Index"><i class='bx bx-arrow-back'></i>Back</a>
            </div>
        </form>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
